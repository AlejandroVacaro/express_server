<div class="signup-container">
  <h2 class="signup-title">Registro de usuario</h2>
  <p class="error-message">{{error}}</p>

  <form action="/api/sessions/signup" method="POST" enctype="multipart/form-data" class="signup-form">
    <div class="form-group">
      <label for="nombre">Nombre:</label>
      <input type="text" id="first_name" name="first_name" required>
    </div>
    <div class="form-group">
      <label for="apellido">Apellido:</label>
      <input type="text" id="last_name" name="last_name" required>
    </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required>
    </div>
    <div class="form-group">
      <label for="edad">Edad:</label>
      <input type="number" id="age" name="age" min="0" required>
    </div>
    <div class="form-group">
      <label for="password">Contrase√±a:</label>
      <input type="password" id="password" name="password" required>
    </div>
    <div class="form-group">
      <input type="file" name="avatar" id="avatar-input">
    </div>
    <div class="form-group">
      <button type="submit" class="signup-button" id="signup-button" disabled>Registrarse</button>
    </div>
  </form>

  <a href="/api/sessions/loginGithub" class="github-signup-link">
    <button class="github-signup-button">Registrarse con GitHub</button>
  </a>
  <a href="/" class="forgot-password-back-link">Volver al inicio</a>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const avatarInput = document.getElementById('avatar-input');
    const signupButton = document.getElementById('signup-button');

    avatarInput.addEventListener('change', () => {
        signupButton.disabled = avatarInput.files.length === 0;
    });
});
</script>

